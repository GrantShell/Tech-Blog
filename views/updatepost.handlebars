<h2 class="pt-3">Update post:</h3>

<div class='d-flex justify-content-center'>

	<form class='form update-post-form col-6' data-post-id='{{id}}'>
		<div class='form-group'>
			<label class="text-light" for='post-header'>Post Header:</label>
			<input
				class='form-control'
				type='text'
				id='post-header'
				name='post-header'
				value='{{header}}'
			/>
		</div>
		<div class='form-group'>
			<label class="text-light" for='post-body'>Post Body:</label>
			<textarea
				rows='20'
				class='form-control'
				id='post-body'
				name='post-body'
			>{{body}}</textarea>
		</div>
		<label for='post-body' class='small text-light'>Limit 5000 characters</label>
		<div class='form-group'>
			<button type='submit' class='btn btn-warning'>Update</button>
		</div>
	</form>
</div>

<script src='/js/post.js'></script>