<div class='container p-5 bg-secondary'>
	<div class='row pt-5 bg-white rounded'>
		<div class='col-lg-8'>
			<article class="pt-5">
				<header class='mb-4'>
					<h1 class='fw-bolder mb-1'>{{header}}</h1>
					<div class='text-muted fst-italic mb-2'>Posted on
						{{format_date date_created}}
						by
						{{user.name}}</div>
				</header>
				<p style="white-space: pre-wrap;">{{body}}</p>
			</article>
      {{#if my_post}}
      <a class="btn btn-warning" href="/post/update/{{id}}">Edit</a>
      <button class="btn btn-danger del-button" id="del-button" data-id="{{id}}">Delete</button>
      {{/if}}


			<section class='mb-5 mt-3'>
				<div class='card bg-light'>
					<div class='card-body'>


						<form class='mb-4 form new-comment-form' data-post-id="{{id}}">
              <textarea
								class='form-control'
                id="comment-body"
                name="comment-body"
								rows='3'
								placeholder='Join the discussion and leave a comment!'
							></textarea>
              <div class="form-group">
                <button type="submit" class="mt-2 btn btn-sm btn-primary">Submit</button>
              </div>
            </form>



            {{> comments}}						
					</div>
				</div>
			</section>
		</div>
		<div class='col-lg-4'>
			<div class='card mb-4 bg-info'>
				<div class='card-header'><h4 class="text-light">Posted by {{user.name}}</h4></div>
				<div class='card-body text-light'>About {{user.name}}</div>
			</div>
		</div>
	</div>
</div>

<script src='/js/post.js'></script>